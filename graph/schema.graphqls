# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: Int!
  created_at: Time!
  updated_at: Time!
  name: String!
  email: String!
  is_active: Boolean!
}

input NewUser {
  id: Int!
  name: String!
  email: String!
  is_active: Boolean!
}

type Query {
  user(id: Int, name: String, email: String, is_active: Boolean): [User!]!
}

type Mutation {
  insertUser(input: NewUser!): User!
  updateUser(input: NewUser!): User!
}

scalar Time
